	@RenderSection("scripts", required: false)

	<script type="text/javascript">
		$('#linkSair').click(function () {
			let retorno = confirm('Tem certeza de que deseja sair da aplicação?');

			if (retorno)
				window.location.href = 'https://www.google.com.br';

		});
	</script>
</body>
